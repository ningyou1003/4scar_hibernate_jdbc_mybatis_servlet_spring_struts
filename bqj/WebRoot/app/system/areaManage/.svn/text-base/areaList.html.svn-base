	<div class="rightinfo">

		<div class="tools">

			<ul class="toolbar">
				<!-- <li id="add" ms-if="vm.power.addpower==1"><span><a href="areaadd.html"><img
							src="../../../images/t01.png" />
				</span>添加</a></li> -->
				<li id="add"><span><img
							src="../../../images/t01.png" />
				</span>添加</li>
				<!-- <li id="edit"><span><img src="../../../images/t02.png" />
				</span>修改</li> -->
				<li id="delete"><span><img src="../../../images/t03.png" />
				</span>删除</li>
			</ul>
			<ul class="toolbar1">
				<li id="check"><span><img
						src="../../../images/ico06.png" /> </span>查询</li>
			</ul>
		</div>

		<div id="sel_div" style="display: none">
			<ul class="seachform">
				<li><label> 名称</label> <input name="RegionTextBox" type="text"
					id="RegionTextBox" ms-duplex="select.region" class="scinput" />
				</li>
				<li><label> 编码</label> <input name="RegionCodeTextBox"
					type="text" id="RegionCodeTextBox" ms-duplex="select.regioncode"
					class="scinput" />
				</li>
				<li><label> &nbsp;</label><input type="submit" name="SelButton"
					value="查询" id="SelButton" class="scbtn" />
				</li>
			</ul>
		</div>

		<table class="tablelist">
			<thead>
				<tr>
					<th class="checkBoxTh"><span class="CheckBoxCss"><input id="checkalls"  
						type="checkbox" ms-click="checkAll" /> </span>
					</th>
					<th width="20%" >{{vm.tableTop.regioncode}}</th>
					<th width="20%" >{{vm.tableTop.region}}</th>
					<th width="40%" >{{vm.tableTop.description}}</th>
					<th width= >{{vm.tableTop.option}}</th>
				</tr>
			</thead>
			<tbody>
				<tr ms-repeat="vm.data">
					<td><span class="CheckBoxCss"><input
						class="itemCheckBox" ms-duplex-string="selectId" type="checkbox"
							ms-attr-value="el.regioncode" /> </span></b>
					</td>
					<td>{{el.regioncode}}</td>
					<td>{{el.region}}</td>
					<td>{{el.description}}</td>
					<td class="autocut">
                    	<li id="edit" style="float:left;"><a id="edit_a" ms-attr-href="areaadd.html?areaId={{el.regioncode}}" style="cursor:pointer;"><font color="blue">编辑</font></a></li>
                    </td>
				</tr>
			</tbody>
		</table>

		<div id="PageInfo" class="pagin" style="margin-bottom: 20px;"></div>
	</div>
