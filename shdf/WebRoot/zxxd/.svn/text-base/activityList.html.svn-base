		var con = 'activity';
		var regioncode=getCookie("regioncode");
        		if (regioncode==null) {
					regioncode="450000000000";
				}
		$.ajax({
						url:"http://192.168.1.74:8080/bqj/"+urls,
						type:"post",
						data:{type:types,page:1,regioncode:regioncode},
						dataType: "json",
						async : false,
						success:function(json){
							//alert(json.data.totalPage);
							pagenum = json.data.totalPage;
							rows = json.data.totalRow;
							var len = json.data.list.length;
							for (i = 0; i < len; i++) {
									   if (json.data.list[i].title.length > 50) {
									   		json.data.list[i].title = json.data.list[i].title.substring(0,50) + '...';
									   };
					                   var str = '<li><img src="../img/list_con_ico.png"><a href="'+con+'.html?key='+json.data.list[i].keyid+'">'+json.data.list[i].title+'</a><span>'+json.data.list[i].createtime+'</span></li>';
					                    $("#lists").append(str);

					              //       var pag = '<a href="javascript:;">'+ y +'</a>';
				            			// $("#page").append(pag);

				            }
				            


						}
				});
				//ajax end
				
				

				$("#pagerArea").cypager({pg_size: 10, pg_nav_count: 8, pg_total_count: rows, pg_call_fun: function(num) {
                    
                    $.ajax({
						url:"http://192.168.1.74:8080/bqj/"+urls,
						type:"post",
						data:{type:types,page:num,regioncode:regioncode},
						dataType: "json",
						success:function(json){
							//var obj = eval("("+data+")");
							$("#lists").empty();
							var len = json.data.list.length;
							for (i = 0; i < len; i++) {
					                   var str = '<li><img src="../img/list_con_ico.png"><a href="'+con+'.html?key='+json.data.list[i].keyid+'">'+json.data.list[i].title+'</a><span>'+json.data.list[i].createtime+'</span></li>';
					                    $("#lists").append(str);
					                    
				            }
				            
				            
						}
					});
                    //ajax

                }});

			//page end

			
		});

        //设置当前频道
            var def = "1";

            function mover(object) {

                //主菜单
                var mm = document.getElementById("m_" + object);
                mm.className = "m_li_a";

                //初始主菜单先隐藏效果
                if (def != 0) {
                    var mdef = document.getElementById("m_" + def);
                    mdef.className = "m_li";
                }

                //子菜单
                var ss = document.getElementById("s_" + object);
                ss.style.display = "block";

                //初始子菜单先隐藏效果
                if (def != 0) {
                    var sdef = document.getElementById("s_" + def);
                    sdef.style.display = "none";
                }

            }

            function mout(object) {

                //主菜单
                var mm = document.getElementById("m_" + object);
                mm.className = "m_li";

                //初始主菜单还原效果
                if (def != 0) {
                    var mdef = document.getElementById("m_" + def);
                    mdef.className = "m_li_a";
                }

                //子菜单
                var ss = document.getElementById("s_" + object);
                ss.style.display = "none";

                //初始子菜单还原效果
                if (def != 0) {
                    var sdef = document.getElementById("s_" + def);
                    sdef.style.display = "block";
                }
            }
