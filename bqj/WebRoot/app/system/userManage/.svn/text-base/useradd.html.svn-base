<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title></title><meta http-equiv="X-UA-Compatible" content="IE=Edge" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script src="../../../assets/js/common.js" type="text/javascript"
	charset="utf-8"></script>
<script src="useradd.js" type="text/javascript" charset="utf-8"></script>
</head>
<body>
	<div ms-controller="useraddCtrl">
		<form name="base_form" method="post" id="base_form">
			<div class="formbody">
				<div class="formtitle">
					<input name="TB_KeyId" type="text" id="TB_KeyId"
						style="display: none" /> <span>基本信息</span>
				</div>
				<table style="width: 95%">
					<tr>
						<td colspan="2">
							<ul class="forminfo">
								<li><label> &nbsp;</label><input type="button"
									name="Button1" value="确认保存" id="Button1" ms-click="submit()"
									class="btn" /> &nbsp;<input type="button" name="btback"
									value="返回" id="btback" class="btn" />
								</li>
							</ul></td>
					</tr>
					<tr>
						<td >
							<ul class="forminfo">
								<li class="row-item"><label for="region">
										所属区域 ： </label> <input name="region" data-rule="required;"
									type="text" id="region" ms-duplex="data.regionname" class="searchBox" /> <font
									color="red">*</font><input name="RegionCode" type="text"
									id="RegionCode" class="dfinput" ms-duplex="data.regionid"
									style="display: none" /></li>
								<li class="row-item"><label for="UserName"> 用户名 ：</label>
									<input name="UserName" type="text" id="UserName" data-rule="required" 
									ms-duplex="data.username" class="dfinput" maxlength="30"  /><font
									color="red">*</font>
								</li>
								<li class="row-item"><label for="RelaName"> 真实姓名 ：</label> <input
									name="RelaName" type="text" id="RelaName" maxlength="20"
									ms-duplex="data.relaname" class="dfinput" data-rule="required" /><font
									color="red">*</font>
								</li>
								<!-- <li class="row-item"><label for="RolesName"> 角色 ：</label> <input
									name="RoleName" id="RoleName" data-rule="required;" type="text"
									ms-duplex="data.rolesname" readOnly="true" class="searchBox" /> <font
									color="red">*</font><input name="RoleID" type="text"
									id="RoleID" class="dfinput" ms-duplex="data.rolesid" 
									style="display: none" /></li>  -->
								<li class="row-item"><label for="RolesName"> 角色 ：</label>
									<select ms-duplex="selectedRole" class="searchBox">
                						<option  ms-repeat="vm.Role">{{el.name}}</option>
            						</select></li>
								<li class="row-item" id="pwd"><label for="PassWord"> 密码 ：</label> <input id="password" name="password"
									type="password" ms-duplex="data.password" class="dfinput"
									data-rule="required;password" /> <font color="red">*</font></li>
								<li class="row-item" id="rpwd"><label for="PassWord"> 确认密码 ：</label> <input
									type="password" ms-duplex="data.repeatpassword" id="repeatpassword" name="repeatpassword"
									class="dfinput" data-rule="required;match(password)" /> <font color="red">*</font>
								</li>
								<li class="row-item"><label for="mobile"> 联系电话 ：</label> <input
									name="mobile" type="text" id="mobile" maxlength="20" data-rule="mobile"
									ms-duplex="data.mobile" class="dfinput" />
								</li>
								<li class="row-item"><label for="email"> Email ：</label> <input
									name="email" type="text" id="email" maxlength="20" data-rule="email"
									ms-duplex="data.email" class="dfinput"/>
								</li>
							</ul></td>
						<td valign="top">
							<ul class="forminfo">
								
								</li>
							</ul></td>
					</tr>
				</table>
			</div>
		</form>
		<div class="formbody" style="display: none;" id="pwdChange">
			<div class="formtitle">
				<span>修改密码</span>
			</div>
			<table style="width: 95%">
				<tr>
					<td colspan="2">
						<ul class="forminfo">
							<li><label> &nbsp;</label><input type="button"
								name="Button1" value="确认保存" id="Button1" ms-click="submitPassword()"
								class="btn" /> 
							</li>
						</ul></td>
				</tr>
				<tr>
					<td>
						<ul class="forminfo">
							<li class="row-item"><label for="PassWord"> 旧密码 ：</label> <input
								type="password" ms-duplex="password.password" class="dfinput"
								data-rule="required" /> <font color="red">*</font></li>
							<li class="row-item"><label for="PassWord"> 新密码 ：</label> <input
								type="password" ms-duplex="password.newpassword" class="dfinput"
								data-rule="required" /> <font color="red">*</font></li>
							<li class="row-item"><label for="PassWord"> 重复密码 ：</label> <input
								type="password" ms-duplex="password.repeatnewpassword"
								class="dfinput" data-rule="required" /> <font color="red">*</font>
							</li>
						</ul></td>
				</tr>
			</table>
		</div>
	</div>
</body>
</html>
