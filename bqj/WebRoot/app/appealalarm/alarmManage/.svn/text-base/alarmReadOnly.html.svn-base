<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>举报详细页面</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="text/javascript" src="../../../assets/js/jquery.js"></script>
    <script src="../../../assets/js/common.js" type="text/javascript" charset="utf-8"></script>
    <link href="../../../assets/ui/skins/Aqua/css/ligerui-all.css" rel="stylesheet" type="text/css" />
    <script src="../../../assets/ui/js/core/base.js" type="text/javascript"></script>
    <script src="../../../assets/ui/js/plugins/ligerGrid.js" type="text/javascript"></script>
    <script src="../../../assets/ui/js/plugins/ligerResizable.js" type="text/javascript"></script>
    <script src="../../../assets/ui/js/plugins/ligerDrag.js" type="text/javascript"></script>
    <script src="../../../assets/js/plugins/DatePicker/WdatePicker.js" type="text/javascript" charset="utf-8"></script>
	<link href="../../../assets/js/plugins/DatePicker/skin/WdatePicker.css" rel="stylesheet" type="text/css" />
	<script src="../../../assets/js/flow.js" type="text/javascript" charset="utf-8"></script>
	<!-- 附件相关js, 注意必须在控制器js前引入-->
	<link rel="stylesheet" type="text/css" href="../../../assets/js/swfupload/css/default.css"/>
	<script type="text/javascript" src="../../../assets/js/swfupload/swfupload.js"></script>
	<script type="text/javascript" src="../../../assets/js/swfupload/handlers.js"></script>
	<script type="text/javascript" src="../../../assets/js/swfupload/myswfupreadonly.js"></script>
	<!-- 附件相关js end -->
    <script src="alarmReadOnly.js" type="text/javascript" charset="utf-8"></script>
</head>
<body>
    <div ms-controller="alarmReadOnlyCtrl">
        <form name="base_form" method="post" id="base_form">
        <div class="formbody">
            <div class="formtitle">
					<span>举报人信息</span>
			</div> 
            <table style="width: 95%">
           		<tr>
                    <td colspan="2">
                        <ul class="forminfo">
                            <li>
                                <label>&nbsp;</label>
                                <b id="approval" style="display: none;">
                                <input type="button" name="flowApproved" value="审核通过" id="flowApproved" class="btn"/>
                                &nbsp;&nbsp;
                                <input type="button" name="report" value="上报" id="report"  class="btn"/>
                                &nbsp;&nbsp;
                                </b>
                                <input type="button" name="btback" value="返回" id="btback" class="btn" /></li>
                        </ul>
                    </td>
                </tr>
                <tr>
                    <td>
                        <ul class="forminfo">
                            <li class="row-item">
                                <label for="">
                                    举报事项 ：</label>
                                <input name="title" type="text" id="title" ms-duplex="data.title"
                                    class="dfinput" maxlength="50" data-rule="required;" readonly="readonly"/><font color="red">*</font>
                            </li>
                            <li class="row-item">
                                <label for="">真实姓名：</label>
                                <input name="realname" type="text" id="realname" ms-duplex="data.realname"
                                    class="dfinput" maxlength="50" readonly="readonly"/>
                            </li>
                            <li class="row-item"><label for="gender"> 性别：</label>
								<input name="gender" type="radio" id="gender_m" ms-duplex-string="data.gender" value="0" readonly="readonly"/>男
								<input name="gender" type="radio" id="gender_f" ms-duplex-string="data.gender" value="1" readonly="readonly"/>女
								</li>
                            <li class="row-item">
                                <label for="">化名：</label>
                                <input name="aliases" type="text" id="aliases" ms-duplex="data.aliases"
                                    class="dfinput" maxlength="50" readonly="readonly"/>
                            </li>                             
                            <li class="row-item">
                                <label>联系电话：</label>
                                <input name="aphone" type="text" id="aphone" class="dfinput" maxlength="50" ms-duplex="data.aphone" data-rule="contact" readonly="readonly"/>
                            </li>
                            <li class="row-item">
                                <label for="">电子邮件：</label>
                                <input name="email" type="text" id="email" ms-duplex="data.email"
                                    class="dfinput" maxlength="50" data-rule="email" readonly="readonly"/>
                            </li> 
                            <li class="row-item">
                                <label for="">邮政编码：</label>
                                <input name="postcode" type="text" id="postcode" ms-duplex="data.postcode"
                                    class="dfinput" maxlength="50" readonly="readonly"/>
                            </li> 
                            <li class="row-item">
                                <label for="">通讯地址：</label>
                                <input name="address" type="text" id="address" ms-duplex="data.address"
                                    class="dfinput" maxlength="250" readonly="readonly"/>
                            </li> 
                        </ul>
                    </td>
                </tr>
                
            </table>
        </div>
        
        <div class="formbody">
            <div class="formtitle">
					<span>举报对象</span>
			</div>
			
			<table style="width： 95%; margin-top： 20px">
				<tr>
					<td>
						<ul class="forminfo">
							<li class="row-item">
                                <label for="">单位或个人：</label>
                                <input name="object" type="text" id="object" ms-duplex="data.object"
                                    class="dfinput" maxlength="250" readonly="readonly"/>
                            </li>
                            <li class="row-item">
                                <label for="">联系电话：</label>
                                <input name="objecttel" type="text" id="objecttel" ms-duplex="data.objecttel"
                                    class="dfinput" maxlength="50" data-rule="contact" readonly="readonly"/>
                            </li>                             
                            <li class="row-item">
                                <label>详细地址：</label>
                                <input name="objectadd" type="text" id="objectadd" class="dfinput" maxlength="250" ms-duplex="data.objectadd" readonly="readonly"/>
                            </li>
						</ul>
					</td>
				</tr>
			</table>
		</div>
		
		<div class="formbody">
            <div class="formtitle">
					<span>举报内容</span>
			</div>
			
				<tr>
                    <td colspan="2">
                        <ul class="forminfo">
                            <li class="row-item">
                                <label>
                                    事实与线索 ：</label>
                                <textarea id="adescribe" name="adescribe" cols="20" rows="5" class="dfinput" ms-duplex="data.adescribe" style=" height:200px; width:70%;" readonly="readonly"></textarea>
                            </li>
                        </ul>
                    </td>
                </tr>

		</div>
        </form>
        
	<!-- 附件列表 start -->
    <table id="attTable" cellspacing="0" cellpadding="0" border="1" style="border-color: #B5D6E6; width: 100%; border-collapse: collapse; border-collapse: collapse; min-height: 50px">
        <tr>
            <td align="left" valign="middle" style="width: 12%; min-height: 50px;padding-left: 68px">
                附件列表:
            </td>
            <td align="left" style="width: 88%;">
                <ul id="attList">
                    <li></li>
                </ul>
            </td>
        </tr>
    </table>
    <!-- 附件列表 end -->

    <!-- 附件按钮 start -->
    <div style="display: inline; float: left; padding-left: 68px; padding-top: 10px">
        <form style="display: none;">
            <div style="display: inline;">
                <span id="spanButtonPlaceholder"></span>
                <input id="btnUpload" type="button" value="上  传"  class="btn" style="height: 28px;"/>
                <input id="btnCancel" type="button" value="取消所有上传"  disabled="disabled" class="btn1" />
            </div>
        </form>
        <div id="divFileProgressContainer" style="display: none;">
        </div>
        <div id="thumbnails">
            <table id="infoTable" border="0" width="530" style="display: inline; padding: 2px;">
            </table>
        </div>
    </div>
    <!-- 附件按钮 end -->
    </div>
</body>
</html>
