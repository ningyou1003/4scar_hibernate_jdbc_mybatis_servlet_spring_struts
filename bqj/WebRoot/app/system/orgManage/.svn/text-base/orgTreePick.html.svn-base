<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title></title><meta http-equiv="X-UA-Compatible" content="IE=Edge" />
<script src="../../../assets/js/common.js" type="text/javascript" charset="utf-8"></script>
<script src="../../../assets/ui/js/core/base.js" type="text/javascript" charset="utf-8"></script>
<link href="../../../assets/ui/skins/Aqua/css/ligerui-all.css"
	rel="stylesheet" type="text/css" />
<script src="../../../assets/ui/js/plugins/ligerTree.js"
	type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		var tree = $("#tree1").ligerTree({
			url : Public.rootPath() + "/org/loadOrgTree",
			idFieldName : 'keyid',
			slide : true,
			ajaxType: 'get',
			parentIDFieldName : 'parent_orgid',
			textFieldName : 'org_fullname',
			checkbox : false,
			onSelect : onSelect

		});
		treeManager = $("#tree1").ligerGetTreeManager();
		//treeManager.collapseAll();

	});

	function onSelect(note) {
		$("#orgName").val(note.data.org_fullname);
		$("#orgId").val(note.data.keyid);
	}
	
</script>
</head>
<body style="padding:10px">
	<div style=" margin:10px; float:left; overflow:auto;  ">
		<ul id="tree1"></ul>
	</div>
	<input type="hidden" id="orgId"/>
	<input type="hidden" id="orgName"/>

	<div style="display:none"></div>
</body>
</html>