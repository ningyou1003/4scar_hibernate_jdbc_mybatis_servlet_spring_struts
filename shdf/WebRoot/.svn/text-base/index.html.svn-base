	            type: 'POST',
	            url: rootPath + '/manage/getMemberForWeb',
	            data: {},
	            dataType: "json",
	            beforeSend: function () {
	                //alert('加载中...');
	            },
	            complete: function () {
	            },
	            xhrFields: {
	                withCredentials: true
	            },
	            success: function (json) {

	                if (json.status == 001) {
	                	var len = json.data.length;
	                	for (i = 0; i < len; i++) {
	                		if (json.data[i].type == 1) {
	                			var ldxz = '<tr><td><strong>'+ json.data[i].job +'：</strong>'+ json.data[i].name +'('+ json.data[i].job2 +')</td></tr>';
		                    		$(".ldxz").append(ldxz);
	                		};
		                    
	                		if (json.data[i].type == 2) {
	                			var office = '<tr><td><strong>'+ json.data[i].job +'：</strong>'+ json.data[i].name +'('+ json.data[i].job2 +')</td></tr>';
		                    		$(".office").append(office);
	                		};

	                		if (json.data[i].type == 0) {
	                			var cydwzz = '<tr><th>'+ json.data[i].name +'</th></tr><tr><td>'+ json.data[i].job.replace(/\n/g, '<br/>') +'</td></tr>';
		                    		$(".cydwzz").append(cydwzz);
	                		};
	                	}
	                	
	                } else {
	                    alert(json.msg);
	                }
	                
	                
	            },
	            error: function (jqXHR, textStatus, errorThrown) {

	            }
	        });
		
			//大事记
			$.ajax({
	            type: 'POST',
	            url: rootPath + '/events/listEventsWeb',
	            data: {},
	            dataType: "json",
	            
	            success: function (json) {
	            	// alert(json.data.aPage.list.length);
	                if (json.status == 001) {
	                	//alert(json.data.aPage.list[0].eyear);
	                	var datas = json.data.aPage.list;
	                	var len = datas.length;

	                	var dsjs = '<tr><th>'+ datas[0].eyear +'</th></tr>';
	                	$(".dsjs").append(dsjs);
	                	for (i = 0; i < len; i++) {
	                		var dsj = '<tr><td>'+ datas[i].emonth +'月</td><td>'+ datas[i].title +'</td></tr>';
		                    	$(".dsj").append(dsj);
		                   	
	                	}
	                	
	                } else {
	                    alert(json.msg);
	                }
	                
	                
	            },
	            error: function (jqXHR, textStatus, errorThrown) {

	            }
	        });

		});

        //设置当前频道
            var def = "1";

            function mover(object) {

                //主菜单
                var mm = document.getElementById("m_" + object);
                mm.className = "m_li_a";

                //初始主菜单先隐藏效果
                if (def != 0) {
                    var mdef = document.getElementById("m_" + def);
                    mdef.className = "m_li";
                }

                //子菜单
                var ss = document.getElementById("s_" + object);
                ss.style.display = "block";

                //初始子菜单先隐藏效果
                if (def != 0) {
                    var sdef = document.getElementById("s_" + def);
                    sdef.style.display = "none";
                }

            }

            function mout(object) {

                //主菜单
                var mm = document.getElementById("m_" + object);
                mm.className = "m_li";

                //初始主菜单还原效果
                if (def != 0) {
                    var mdef = document.getElementById("m_" + def);
                    mdef.className = "m_li_a";
                }

                //子菜单
                var ss = document.getElementById("s_" + object);
                ss.style.display = "none";

                //初始子菜单还原效果
                if (def != 0) {
                    var sdef = document.getElementById("s_" + def);
                    sdef.style.display = "block";
                }
            }
